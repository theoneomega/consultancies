<div class="page-header">
  <%= link_to schedules_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_schedule_path(@schedule), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show schedule</h1>
</div>

<dl class="dl-horizontal">
  <dt>Meeting:</dt>
  <dd><%= @schedule.meeting %></dd>

  <dt>Teacher:</dt>
  <dd><%= @schedule.teacher.fullname %></dd>

  <dt>Students:</dt>
  <% @schedule.students.each do |student| %>
      <dd><%= student.fullname %></dd>
  <% end %>

</dl>
